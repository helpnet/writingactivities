<h2>Reverse Paragraph</h2>
<% if params[:t] %>
    <div class='row-fluid'>

        <div class='span6 paragraph reversed'>
            <h4>Reversed</h4>
            <%= simple_format(sanitize(@reverse_text, :tags => %w(div a), :attributes => %w(class href)), {}, :sanitize => false) %>
        </div>

        <div class='span6 paragraph original'>
            <h4>Original</h4>
            <%= simple_format(sanitize(@markup_text, :tags => %w(div a), :attributes => %w(class href)), {}, :sanitize => false) %>
        </div>

    </div>
    <hr />
<% end %>

<div class='row-fluid'>

    <div class='span8 offset2'>
        <%= form_tag "/reverse-paragraph", :method => 'post' do %>
            <div>
                <%= label_tag :t, "Enter Text:" %>
            </div>
            <%= text_area_tag :t, @text, :rows => 10, :class => "span12" %>
            <br />
            <br />
            <%= submit_tag "Submit", :class => "btn" %>
        <% end %>
    </div>
</div>
