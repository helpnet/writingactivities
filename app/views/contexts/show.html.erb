<h2><%= "#{@context.context_label} #{@context.context_title}" %></h2>
<hr />

<h3>Grade Demo</h3>
<p><i>You are viewing this course group as a <%= @role %></i></p>
    <% if session['launch_params'] %>
        <div class='span12'>
            <%= form_tag lti_exam_path, :method => 'post' do %>
                <%= text_field_tag :score, '', :class => 'input-mini' %>
                <%= hidden_field_tag :context, @context.id %>
                <br />
                <%= submit_tag "Give yourself a grade between 0 and 1", :class => 'btn' %>
            <% end %>
        </div>
    <% end %>
