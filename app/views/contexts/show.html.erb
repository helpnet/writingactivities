<%= render 'header' %>

<div class='row-fluid'>

    <hr />

    <div class='span7'>

        <%= link_to raw("<i class='icon-plus-sign'></i>  Add a New Activity"), new_context_prompt_path(@context) %>

        <% if @context.prompts.length > 0 %>
            <h3>Activities</h3>
            <%= div_for @context.prompts do |prompt| %>
                <%= link_to prompt.title, context_prompt_path(@context, prompt) %>
            <% end %>
        <% end %>
    </div>
</div>
